/**
 * Make console interface
 */

require __DIR__ . DIRECTORY_SEPARATOR . '../vendor/autoload.php';
require_once __DIR__ . DIRECTORY_SEPARATOR . '../config/env.php';

//get command line arguments
$options = getopt('', [
    'help', 
    'controller::',
    'namespace::',
    'model::', 
    'migration::', 
    'seed::', 
    'request::', 
    'middleware::', 
    'table::',
    'resource::',
    'api'
]);

//handle command line arguments
\Framework\Console\Maker::parseCLI($options);