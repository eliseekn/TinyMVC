{% apply spaceless %}

<!DOCTYPE html>
<html lang="{{ config('app.lang') }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="{% block page_title %}{% endblock %}">
        <link rel="stylesheet" href="{{ url('resources/vendor/bootstrap-4.5.3-dist/css/bootstrap.min.css') }}">
        <title>{{ block("page_title") }}</title>
    </head>

    <body>
        <div class="container py-5" style="width: 450px">
            <h1 class="pb-3 text-center">{{ block("page_title") }}</h1>

            {% if alert is not empty %}
                {% include "partials/alert.html.twig" with {alert: alert} %}
            {% endif %}

            {% block page_content %}{% endblock %}
        </div>

        <script defer src="{{ url('resources/vendor/fontawesome-5.13-all.js') }}"></script>
        <script defer src="{{ url('resources/vendor/jquery-3.5.1.slim.min.js') }}"></script>
        <script defer src="{{ url('resources/vendor/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js') }}"></script>
        <script defer src="{{ assets('js/index.js') }}"></script>
    </body>
</html>

{% endapply %}