{% extends "layouts/admin.html.twig" %}

{% block page_title %}
	{{ __('products') ~ ' | Administration' }}
{% endblock %}

{% block page_content %}

    <div class="card shadow-sm">
        <div class="card-header">{{ __('details') }}</div>

        <div class="card-body">
            <div class="form-group row">
                <p class="col-sm-2 col-form-label">ID</p>
                <div class="col-form-label col-sm-10 font-weight-bold">{{ data.id }}</div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('created_at') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">
                    {{ date_helper(data.created_at) }}
                </div>
            </div>

            <div class="form-group row">
                <p class="col-sm-2 col-form-label">{{ __('updated_at') }}</p>
                <div class="col-form-label col-sm-10 font-weight-bold">
                    {{ data.updated_at != data.created_at ? date_helper(data.updated_at) : '-' }}
                </div>
            </div>
        </div>

        <div class="card-footer">
            <a href="{{ route('products.edit', data.id) }}" class="btn btn-outline-dark">
                {{ __('edit') }}
            </a>

            <a href="{{ route('products.new') }}" class="btn btn-outline-dark ml-2">
                {{ __('new') }}
            </a>

            <confirm-delete 
                type="text" 
                content="{{ __('delete') }}" 
                action="{{ route('products.delete', data.id) }}">
            </confirm-delete>
            
            <a href="{{ route('products.index') }}" class="btn btn-outline-dark ml-2">
                {{ __('cancel') }}
            </a>
        </div>
    </div>

{% endblock %}