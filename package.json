{
	"private": true,
	"scripts": {
		"parcel-watch": "parcel watch resources/js/index.js resources/js/theme.js -d public/js",
		"sass-watch": "sass --watch resources/scss:public/css --style=compressed",
		"parcel-build": "parcel build resources/js/index.js resources/js/theme.js -d public/js",
		"build": "yarn parcel-build",
		"dev": "concurrently \"yarn parcel-watch\" \"yarn sass-watch\""
	},
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
	"devDependencies": {
		"concurrently": "^5.3.0",
		"parcel-bundler": "^1.12.4"
	}
}
