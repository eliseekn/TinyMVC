{
	"private": true,
	"scripts": {
		"parcel-watch": "parcel watch resources/scripts/index.js resources/scripts/theme.js --dist-dir public/js",
		"sass-watch": "sass --watch resources/styles:public/css --style=compressed",
		"parcel-build": "parcel build resources/scripts/index.js resources/scripts/theme.js --dist-dir public/js",
		"dev": "concurrently \"yarn parcel-watch\" \"yarn sass-watch\"",
		"build": "yarn parcel-build"
	},
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
	"devDependencies": {
		"concurrently": "^5.3.0",
		"parcel": "next"
	}
}
